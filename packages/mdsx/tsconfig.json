{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "target": "ES2020",
        "module": "ESNext",
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}